@model IEnumerable<InAndOut.Models.Expense>

<div class="row pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create new Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="30%">@expense.Id</td>
                        <td width="30%">@expense.ItemName</td>
                        <td width="30%">@expense.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses created yet</p>
    }
</div>

